<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/flashcard_question_input_layout"
            style="@style/Widget.Flashcard.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question"
            app:endIconMode="clear_text"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/flashcard_question_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/flashcard_answer_input_layout"
            style="@style/Widget.Flashcard.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flashcard_question_input_layout"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            android:hint="Answer"
            app:endIconMode="clear_text" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/flashcard_answer_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/flashcard_hint_input_layout"
            style="@style/Widget.Flashcard.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flashcard_answer_input_layout"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            android:hint="Optional hint"
            app:endIconMode="clear_text" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/flashcard_hint_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="2" />

        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
</LinearLayout>
